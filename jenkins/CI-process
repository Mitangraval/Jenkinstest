pipeline {
  agent { label 'slavenode'}
  stages {
    stage('checkout') {
	  steps {
	    checkout scm
	  }
	}
	
	stage('Build') {
	  steps {
	    sh 'mv clean package'
	  }
	}
	
	stage(''unit tests) {
	  steps {
	    sh 'mvn test'
	  }
	}
	
	stage('Integration Test') {
	  steps {
	    sh './run_integration_tests.sh'
	  }
	}
	
	stage('Deploy') {
	  steps {
	    sh './deploy.sh'
	  }
	}
	
	post {
	  success {
	    echo 'pipeline succeded'
	  }
	  failure {
	    echo 'pipeline failed!'
	  }
	}
  }
}
